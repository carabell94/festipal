<p class='display-day-of-week'> Testing </p>

<div class="container">
  <div class="row">
    <% @festival.stages.each do |stage| %>
      <div class="col-6 bg-white">
        <h3 display-day-of-week><%= stage.name %></h3>
        <% stage.schedules.where(day: 'Friday').each do |concert| %>
          <%= link_to ??? do %>
            <p><%= concert.artist %> <%= concert.day %> <%= concert.start_time %> <%= concert.end_time %></p>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

