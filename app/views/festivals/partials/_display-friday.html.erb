<p class='display-day-of-week'>Friday</p>

<div class="container">
  <div class="row">
    <% @festival.stages.each do |stage| %>
      <div class="col-6 bg-white">
        <h3 display-day-of-week><%= stage.name %></h3>
        <% stage.schedules.where(day: 'Friday').each do |concert| %>
          <% if concert.end_time == 24 %>
            <%= link_to schedule_user_schedules_path(concert), class: "btn #{concert.user_schedules.where(user: current_user) != [] ? 'disabled' : ''} concert", method: :post do %>
             <p><%= concert.artist %>  <%= concert.start_time %>.00 - 00.00</p>
            <% end %>
            <% else %>
              <%= link_to schedule_user_schedules_path(concert), class: "btn #{concert.user_schedules.where(user: current_user) != [] ? 'disabled' : ''} concert", method: :post do %>
                <p><%= concert.artist %>  <%= concert.start_time %>.00 - <%= concert.end_time %>.00</p>
                <% end %>
            <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

