<% if concert.end_time == 24 %>
  <%= link_to schedule_user_schedules_path(concert), class: "lineup lineup-link lineup_#{concert.start_time} #{concert.user_schedules.where(user: current_user) != [] ? 'disabled-lineup' : ''} #{@start_times_day.include?(concert.start_time) ? 'disabled-lineup' : '' } #{@start_times_day.include?(concert.start_time) && concert.user_schedules.where(user: current_user).empty?  ? 'cross-line' : '' }", method: :post, remote: true do %>
    <p>
      <i class="
        <%= if @start_times_day.include?(concert.start_time) && concert.user_schedules.where(user: current_user) != []
          'fas fa-check'
          elsif @start_times_day.include?(concert.start_time) && concert.user_schedules.where(user: current_user).empty?
          'fas fa-times-circle'
          else
          'fas fa-plus-square'
        end %>
      "></i>
      <span class="name-artist"><%= concert.artist %></span> <span class="comfortaa-font colored-time"> <%= concert.start_time %>.00 - 00.00</span></p>
  <% end %>
<% else %>
  <%= link_to schedule_user_schedules_path(concert), class: "lineup lineup-link lineup_#{concert.start_time} #{concert.user_schedules.where(user: current_user) != [] ? 'disabled-lineup' : ''} #{@start_times_day.include?(concert.start_time) ? 'disabled-lineup' : '' } #{@start_times_day.include?(concert.start_time) && concert.user_schedules.where(user: current_user).empty? ? 'cross-line' : '' }", method: :post, remote: true do %>
      <p>
        <i class="
          <%= if @start_times_day.include?(concert.start_time) && concert.user_schedules.where(user: current_user) != []
          'fas fa-check'
          elsif @start_times_day.include?(concert.start_time) && concert.user_schedules.where(user: current_user).empty?
          'fas fa-times-circle'
          else
          'fas fa-plus-square'
          end %>
        "></i>
        <span class="name-artist"><%= concert.artist %></span> <span class="comfortaa-font colored-time"> <%= concert.start_time %>.00 - <%= concert.end_time %>.00</span></p>
  <% end %>
<% end %>
