<div class="initial-form form-group text-center mx-5">
  <%= simple_form_for :search, url: festival_path(@festival), method: 'GET' do |f| %>
  <%= f.select :name, options_from_collection_for_select(Festival.all, "id", "name"), label: false, prompt: 'Choose Festival...' %>
  <%= f.submit 'Go', class: 'btn btn-info' %>
  <% end %>
</div>

