<div class="outter">
  <div class="container">
    <div class="d-flex justify-content-center h-100">
      <div class="card1">
        <div class="card-header1">

          <div class="d-flex justify-content-end social_icon">
          </div class="d-flex justify-content-center text-center">

          <h2 class="header2">Update Details</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :first_name, label: 'First Name', required: true %>
              <%= f.input :last_name, label: 'Last Name', required: true %>
              <%= f.input :email, required: true, autofocus: true %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>
              <%= f.input :photo, as: :file %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Update", class: 'btn btn-info' %>
            </div>
          <% end %>
          <br>
         <!--  <h3>Cancel my account</h3>

          <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->
          <%= link_to "Back", :back, class: "white, m-2 back-button-styling" %>

        </div>
      </div>
    </div>
  </div>
</div>
